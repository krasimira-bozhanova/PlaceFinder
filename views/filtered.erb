<div class="mainpanel">
  <div class="category_name">
    <h1>Резултати от търсенето</h1>
  </div>
  <% if @result_places.empty? %>
    Няма такива заведения.
  <% else %>
  <% @result_places.each do |place| %>
  <div class="text_">
    <h1><a href="http://www.free-css.com/"><%= place.name %> </a></h1>
    <div class="text">
      <img src="/img/<%= place.main_picture_path %>" width="140" height="120" alt="" /> <%= place.description %><br />
    </div>

    <div class="clearfix"></div>

    <h2><a href="/<%= place.id %>"><img src="/img/more.gif" alt="" />Read more</a></h2>
  </div>
  <% end %>
  <% end %>
</div>